{
  "manifest_version": 3,
  "name": "VernisAI",
  "version": "0.1.0",
  "description": "Generate context-aware replies for social media platforms",
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "js": [
        "assets/index.ts-loader-D12gaaNA.js"
      ],
      "matches": [
        "*://*.twitter.com/*",
        "*://*.x.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "*://*.twitter.com/*",
        "*://*.x.com/*"
      ],
      "resources": [
        "assets/index.ts.B6p-9Csh.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
